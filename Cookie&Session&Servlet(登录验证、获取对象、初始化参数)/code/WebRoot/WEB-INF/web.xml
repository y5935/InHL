<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>03CookieServlet</display-name>
  <!-- 
  	上下文参数
  	上下文参数可以在任意位置被读取
  -->
  <context-param>
  	<param-name>ip</param-name>
  	<param-value>192.168.10.1</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>cn.hl.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>WriteCookie</servlet-name>
  	<servlet-class>cn.hl.cookie.WriteCookie</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>WriteCookie</servlet-name>
  	<url-pattern>/wc</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ReadCookie</servlet-name>
  	<servlet-class>cn.hl.cookie.ReadCookie</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ReadCookie</servlet-name>
  	<url-pattern>/rc1</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ReadCookie2</servlet-name>
  	<servlet-class>cn.hl.cookie.ReadCookie2</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ReadCookie2</servlet-name>
  	<url-pattern>/car/rc2</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>WriteSession</servlet-name>
  	<servlet-class>cn.hl.session.WriteSession</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>WriteSession</servlet-name>
  	<url-pattern>/ws</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ReadSession</servlet-name>
  	<servlet-class>cn.hl.session.ReadSession</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ReadSession</servlet-name>
  	<url-pattern>/rs</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ConfigServlet</servlet-name>
  	<servlet-class>cn.hl.servlet.ConfigServlet</servlet-class>
  	<!-- 
  		Servlet的初始化参数
  		init-param所配置的参数只能被当前Servlet所使用
  	-->
  	<init-param>	
  		<param-name>eMail</param-name>
  		<param-value>zhanzhang@163.com</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ConfigServlet</servlet-name>
  	<url-pattern>/conf</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
	<servlet-name>ContextServlet</servlet-name>  
  	<servlet-class>cn.hl.servlet.ContextServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ContextServlet</servlet-name>
  	<url-pattern>/context</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>    
  </welcome-file-list>
</web-app>